generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql" or "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String?   // Nullable for OAuth-based users
  firstName       String
  lastName        String
  image           String?
  authProviderId  String?   // For OAuth users (e.g., Google or GitHub)
  role            Role      @default(USER) // Default role is USER
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Todo {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  USER
}
